<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".RegisTration">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="@dimen/dim_250dp"
        android:background="@drawable/reglogshape"
        android:gravity="bottom|right"
        android:padding="27dp"

        android:text="Registration"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/dim_96dp"
        android:layout_height="@dimen/dim_96dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/baseline_account_circle_24"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New's Vid"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.68" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_20dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dim_40dp"

        app:cardElevation="@dimen/dim_3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_59dp"
                android:layout_height="@dimen/dim_39dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:padding="@dimen/dim_5dp"
                android:src="@drawable/baseline_drive_file_rename_outline_24" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_39dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"

                android:hint="Name"
                android:inputType="text"
                android:padding="@dimen/dim_5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dim_40dp"
        android:background = "@color/white"
        app:cardElevation="@dimen/dim_3dp"
        android:backgroundTint = "@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="@dimen/dim_20dp"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_59dp"
                android:layout_height="@dimen/dim_39dp"
                android:layout_gravity="center"
                android:background = "@color/white"
                android:backgroundTint = "@color/white"
                android:padding="@dimen/dim_5dp"
                android:src="@drawable/baseline_email_24" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_39dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textColorHint="@color/black"
                android:background="@color/white"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"
                android:padding="@dimen/dim_5dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_92dp"
        android:layout_marginTop="@dimen/dim_20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/dim_40dp"
        app:cardElevation="@dimen/dim_3dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_59dp"
                android:layout_height="@dimen/dim_39dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="@dimen/dim_5dp"
                android:src="@drawable/baseline_lock_24" />

            <EditText
                android:id="@+id/passocde"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_39dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:textColorHint="@color/black"
                android:ems="10"
                android:hint="Passcode"
                android:inputType="text"
                android:padding="@dimen/dim_5dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="@dimen/dim_20dp"
        app:cardCornerRadius="@dimen/dim_40dp"
        app:cardElevation="@dimen/dim_3dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mfIcon"
                android:layout_width="@dimen/dim_59dp"
                android:layout_height="@dimen/dim_39dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="@dimen/dim_5dp"
                android:src="@drawable/baseline_male_24" />

            <Space
                android:layout_width="@dimen/dim_10dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_39dp"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/dim_40dp"
        android:layout_marginTop="@dimen/dim_20dp"
        app:cardElevation="@dimen/dim_3dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dim_59dp"
                android:layout_height="@dimen/dim_39dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="@dimen/dim_5dp"
                android:src="@drawable/baseline_family_restroom_24" />

            <Space
                android:layout_width="@dimen/dim_10dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/married_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_39dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dim_20dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/dim_40dp"
        app:cardElevation="@dimen/dim_3dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_59dp"
                android:layout_height="@dimen/dim_39dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="@dimen/dim_5dp"
                android:src="@drawable/baseline_add_location_alt_24" />

            <EditText
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_39dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint="Address.."
                android:inputType="text"
                android:padding="@dimen/dim_5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Add photo ?"
        android:textSize="@dimen/dim_16dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="@+id/profile_image"
        app:layout_constraintVertical_bias="0.506" />

    <TextView
        android:id="@+id/createUser"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_36dp"
        android:background="@drawable/gradi"
        android:gravity="center"
        android:padding="@dimen/dim_10dp"
        android:text="New Reporter ?"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_20dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you have already account ?"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_32dp"
        android:layout_marginBottom="@dimen/dim_32dp"
        android:text=" Log in"
        android:textColor="#FF8C68"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"

        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/createUser"
        app:layout_constraintVertical_bias="0.216" />

</androidx.constraintlayout.widget.ConstraintLayout>
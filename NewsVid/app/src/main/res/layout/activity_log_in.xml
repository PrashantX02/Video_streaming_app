<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="@dimen/dim_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dim_40dp"
            android:backgroundTint = "@color/white"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_5dp">

                <ImageView
                    android:layout_width="@dimen/dim_30dp"
                    android:layout_height="@dimen/dim_30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/google" />

                <Space
                    android:layout_width="@dimen/dim_30dp"
                    android:layout_height="@dimen/dim_1dp" />

                <TextView
                    android:layout_width="@dimen/dim_200dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="Log in with google"
                    android:textSize="@dimen/dim_17dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dim_40dp"
            android:backgroundTint = "@color/white"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_5dp">

                <ImageView
                    android:layout_width="@dimen/dim_30dp"
                    android:layout_height="@dimen/dim_30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/facebook" />

                <Space
                    android:layout_width="@dimen/dim_30dp"
                    android:layout_height="@dimen/dim_1dp" />

                <TextView
                    android:layout_width="@dimen/dim_200dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="Log in with facebook"
                    android:textSize="@dimen/dim_17dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/loged"
            android:layout_width="match_parent"
            android:backgroundTint = "@color/white"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dim_40dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_5dp">

                <ImageView
                    android:layout_width="@dimen/dim_30dp"
                    android:layout_height="@dimen/dim_30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_account_circle_24" />

                <Space
                    android:layout_width="@dimen/dim_30dp"
                    android:layout_height="@dimen/dim_1dp" />

                <TextView
                    android:layout_width="@dimen/dim_200dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="existing user ? "
                    android:textSize="@dimen/dim_17dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/register"
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="wrap_content"

        app:cardCornerRadius="@dimen/dim_30dp"
        app:cardElevation="@dimen/dim_2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim_20dp"
            android:background="@drawable/gradi"
            android:padding="@dimen/dim_10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="New Reporter ?"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>